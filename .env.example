# ERP JSP v3.0 - Configurações de Ambiente
# Copie este arquivo para .env e configure suas variáveis

# Flask
FLASK_APP=app.app
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=sua_chave_secreta_super_forte_aqui_pelo_menos_32_caracteres

# Banco de Dados
# Para PostgreSQL (produção Render):
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Para SQLite (desenvolvimento local apenas):
# DATABASE_URL=sqlite:///database/database.db

# Configurações do Sistema
COMPANY_NAME=JSP Soluções Tecnológicas
SYSTEM_VERSION=3.0
TIMEZONE=America/Sao_Paulo

# Debug e Logs
DEBUG_MODE=False
LOG_LEVEL=WARNING

# Render Deploy
PORT=10000

# Configurações de Segurança
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
WTF_CSRF_ENABLED=True

# Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

